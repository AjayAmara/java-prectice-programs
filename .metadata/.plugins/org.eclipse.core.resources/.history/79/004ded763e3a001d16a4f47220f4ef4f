package exam;

public class ChidCountAndAudCo {
	
	public void static counting(int[] arr) {
		
		int chCount = 0, audCount = 0;
		
		for (int i = 0; i < arr.length; i++) {

			if (arr[i] <= 18)
				chCount++;
			else
				audCount++;

		}

		System.out.println("Children count: " + chCount);
		System.out.println("Adult count: " + audCount);
	}
		
	}

	public static void main(String[] args) {
		
		int[] arr= {10,15,8,20,30,40,50};
		counting(arr);
		
		
		
	}
	

